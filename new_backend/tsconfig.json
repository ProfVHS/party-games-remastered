{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true,

    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../../shared/*"],
      "@engine/*": ["engine/*"],
      "@sockets/*": ["sockets/*"],
      "@backend-types": ["types"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
